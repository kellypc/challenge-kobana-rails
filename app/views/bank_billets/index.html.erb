<section class="jumbotron text-center col-md-12">
  <div class="container">
    <h1 class="jumbotron-heading mt-5">Bem-vindo ao Gerenciador de Boletos</h1>
    <p class="lead text-muted">Visualize, Crie, Edite e Exclua seus Boletos Bancários</p>

    <h1>Boletos Bancários</h1>

    <div class="row">
      <% @bank_billets.each do |bank_billet| %>
        <div class="col-sm-6 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= bank_billet.customer_person_name %></h5>
              <p class="card-text"><span class="badge badge-<%= bank_billet.status %>"><%= bank_billet.status %></p></span>
              <p class="card-text">Valor: <%= number_to_currency bank_billet.amount %></p>
              <p class="card-text">Vencimento: <%= formatted_date(bank_billet.expire_at) %></p>
              <div class="btn btn-primary">
                <%= link_to 'Detalhes', bank_billet, :class=>"btn" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="btn btn-primary mb-5">
      <%= link_to 'Criar novo Boleto Bancário', new_bank_billet_path, :class => "btn" %>
    </div>
  </div>

</section>
